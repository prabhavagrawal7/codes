        "extensionBadge.remoteBackground": "#000000",
        "banner.background": "#000000",
        "titleBar.activeBackground": "#000000",
        "titleBar.inactiveBackground": "#000000",
        "sideBar.background": "#000000",
        "icon.foreground": "#00ccff",
        "activityBar.activeBackground": "#103e38",
        "activityBar.activeBorder": "#007acc",
        // "activityBar.inactiveForeground": "#68920e",
        // "sideBar.border": "#0f4258",
        "input.border": "#420f0f",
        "tab.border": "#776969",
        "panel.border": "#423b3b",
        "contrastBorder": "#292424",
